<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/_xshare_bg_poup"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.lxj.androidktx.widget.ShapeTextView
            android:id="@+id/tvWxFriend"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:drawableTop="@drawable/umeng_socialize_wechat"
            app:stv_drawableSize="40dp"
            android:textSize="13sp"
            android:textColor="#555"
            android:text="微信"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <com.lxj.androidktx.widget.ShapeTextView
            android:id="@+id/tvWxCircle"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:drawableTop="@drawable/umeng_socialize_wxcircle"
            app:stv_drawableSize="40dp"
            android:textSize="13sp"
            android:textColor="#555"
            android:text="朋友圈"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <com.lxj.androidktx.widget.ShapeTextView
            android:id="@+id/tvQQ"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:drawableTop="@drawable/umeng_socialize_qq"
            app:stv_drawableSize="40dp"
            android:textSize="13sp"
            android:textColor="#555"
            android:text="QQ"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <com.lxj.androidktx.widget.ShapeTextView
            android:id="@+id/tvSina"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:drawableTop="@drawable/umeng_socialize_sina"
            app:stv_drawableSize="40dp"
            android:textSize="13sp"
            android:textColor="#555"
            android:text="微博"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvCancel"
        android:text="取消"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="#666666"
        android:background="?selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>