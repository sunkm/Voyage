<?xml version="1.0" encoding="utf-8"?><!--suppress ALL -->
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    app:edgeToEdge="true"
    tools:context=".activity.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.manchuan.tools.view.FlowingLightView
            android:id="@+id/flow_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/rootLay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                app:elevation="@dimen/dp_8"
                app:liftOnScroll="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:elevation="@dimen/dp_8">

                    <LinearLayout
                        android:id="@+id/titleLay"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:animateLayoutChanges="true"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <com.drake.engine.widget.MarqueeTextView
                            android:id="@+id/title"
                            style="@style/TextView.SansSerifCondensedMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_20"
                            android:ellipsize="marquee"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="小说标题"
                            android:textColor="@color/editTextColor"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:transitionName="title" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/sub"
                            style="@style/TextView.SansSerifCondensedMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:text="作者"
                            android:textColor="@color/hui"
                            android:textSize="12sp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageView5"
                    android:layout_width="@dimen/dp_220"
                    android:layout_height="@dimen/dp_220"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    android:elevation="@dimen/dp_24"
                    android:scaleType="fitXY"
                    app:shapeAppearance="@style/RoundedStyle"
                    app:srcCompat="@drawable/umeng_socialize_share_music" />

            </LinearLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">


                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_26"
                    android:layout_marginEnd="@dimen/dp_26"
                    android:splitTrack="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/currentTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_46"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:paddingStart="@dimen/dp_2"
                        android:text="00:00" />

                    <TextView
                        android:id="@+id/totalTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/dp_46"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:paddingEnd="@dimen/dp_2"
                        android:text="00:00" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_56"
                    android:layout_marginStart="@dimen/dp_26"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_26">

                    <ImageView
                        android:id="@+id/previous"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_14"
                        android:scaleType="fitEnd"
                        app:srcCompat="@drawable/ic_baseline_skip_previous_24" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/play"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:elevation="0dp"
                            android:hapticFeedbackEnabled="true"
                            android:src="@drawable/ic_baseline_play_arrow_24"
                            app:elevation="0dp"
                            app:fabSize="auto"
                            app:pressedTranslationZ="0dp"
                            tools:ignore="SpeakableTextPresentCheck" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/next"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:padding="@dimen/dp_14"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/ic_baseline_skip_next_24" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/moreAction"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_56"
                    android:layout_marginTop="@dimen/dp_8">

                    <ImageView
                        android:id="@+id/shuffle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_16"
                        app:srcCompat="@drawable/ic_baseline_shuffle_24" />

                    <ImageView
                        android:id="@+id/snooze"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_16"
                        app:srcCompat="@drawable/ic_baseline_snooze_24" />

                    <ImageView
                        android:id="@+id/playList"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_16"
                        app:srcCompat="@drawable/ic_baseline_playlist_play_24" />

                    <ImageView
                        android:id="@+id/speed"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_16"
                        app:srcCompat="@drawable/ic_baseline_speed_24" />
                </LinearLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </FrameLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="false"
        app:drawerLayoutCornerSize="0dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_32"
            android:fitsSystemWindows="false"
            app:layoutManager="com.drake.brv.layoutmanager.HoverLinearLayoutManager" />

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>